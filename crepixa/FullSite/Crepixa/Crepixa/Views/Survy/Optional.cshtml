@model Crepixa.ViewModels.OptionalVM
@{
    ViewData["Title"] = "Ordinary";
}
@using (Html.BeginForm("Optional", "Survy", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            <label for="q">Question</label>
            @Html.TextBoxFor(x => x.Question, new { @class = "form-control", @name = "q" })
        </div>
        <div class="form-group">
            <label for="F">First Choice</label>
            @Html.TextBoxFor(x => x.A, new { @class = "form-control", @name = "F" })
        </div>
        <div class="form-group">
            <label for="S">Second Choice</label>
            @Html.TextBoxFor(x => x.B, new { @class = "form-control", @name = "S" })
        </div>
        <div class="form-group">
            <label for="T">Third Choice</label>
            @Html.TextBoxFor(x => x.C, new { @class = "form-control", @name = "T" })
        </div>
        <div class="form-group">
            <label for="Ft">Fourth Choice</label>
            @Html.TextBoxFor(x => x.D, new { @class = "form-control", @name = "Ft" })
        </div>
        <input type="submit" class="form-control btn btn-primary" value="New Question" />
    </div>
}
