@model Crepixa.Models.Tag
@{
    ViewData["Title"] = "New Tag";
}
<h3>
    New Tag
</h3>
@using (Html.BeginForm())
{
    <div class="container">
        <div class="form-group">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
        <input type="submit" class="form-control btn btn-primary" value="New Tag" />
    </div>
}
