@model Crepixa.ViewModels.LoginVM
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Crepixa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto mt-4 lp">
            <div class="myform form">
                <div class="logo mb-3">
                    <div class="col-md-12 text-center">
                        <h1></h1>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.LabelFor(c => c.Email)
                        @Html.TextBoxFor(c => c.Email,
                            new { @class = "form-control" , @placeholder = "Enter Your Email" })
                        @Html.ValidationMessageFor(c => c.Email)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(c => c.Password)
                        @Html.PasswordFor(c => c.Password,
                            new { @class = "form-control" , @placeholder = "Enter Your Password"})
                        @Html.ValidationMessageFor(c => c.Email)
                    </div>

                    <div class="form-group">
                        <p class="text-center">
                            <a href="#">
                                Don't Remember Password
                            </a>
                        </p>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="submit"
                                    class="btn btn-block btn-primary mybtn tx-tfm">
                                Login
                            </button>
                        </div>

                    </div>

                    <div class="form-group">
                        <p class="text-center">
                            Don't have account?
                            <a href="/Account/Register" id="signup">
                                Sign up
                            </a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>>