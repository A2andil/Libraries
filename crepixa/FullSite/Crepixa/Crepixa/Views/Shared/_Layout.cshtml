<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Crepixa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Crepixa</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" 
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" 
                               asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3 col-sm-6" style=" height: 500px">
                        <div class="card">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <a asp-controller="Account" asp-action="Manage"
                                       class="btn btn-link borderless shadow-none">
                                        <i class="fa fa-users fa-lg"></i>
                                        Accounts
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Tag" asp-action="Manage"
                                       class="btn btn-link borderless shadow-none">
                                        <i class="fa fa-pencil-square-o fa-lg"></i> Tags
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Country" asp-action="Manage"
                                       class="btn btn-link borderless shadow-none">
                                        <i class="fa fa-flag fa-lg"></i>
                                        Countries
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Subscriber" asp-action="Manage"
                                       class="btn btn-link borderless shadow-none">
                                        <i class="fa fa-star fa-lg"></i>
                                        Subscribers
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Company" asp-action="Manage"
                                       class="btn btn-link borderless shadow-none">
                                        <i class="fa fa-industry fa-lg"></i>
                                        Companies
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Project" asp-action="Manage"
                                       class="btn btn-link borderless shadow-none">
                                        <i class="fa fa-tasks"></i>
                                        Projects
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Survy" asp-action="Manage"
                                       class="btn btn-link borderless shadow-none">
                                        <i class="fa fa-question-circle"></i>
                                        Survies
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="FAQ" asp-action="Manage"
                                       class="btn btn-link borderless shadow-none">
                                        <i class="fa fa-question-circle"></i>
                                        FAQ
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-9 col-sm-6" style="min-height: 500px">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Crepixa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
