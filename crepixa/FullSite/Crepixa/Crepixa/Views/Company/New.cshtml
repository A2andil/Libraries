@model Crepixa.Models.Company
@{
    ViewData["Title"] = "New Company";
}
<h3>
    New Company
</h3>

@using (Html.BeginForm("New", "Company", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            <label for="ARN">Name In Arabic</label>
            @Html.TextBoxFor(x => x.NameAr, new { @class = "form-control", @name = "ARN" })
        </div>
        <div class="form-group">
            <label for="ARE">Name In English</label>
            @Html.TextBoxFor(x => x.NameEn, new { @class = "form-control", @name = "ARE" })
        </div>
        <div class="form-group">
            <label for="EML">Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @name = "EML" })
        </div>
        <div class="form-group">
            <label for="PHN">Phone</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @name = "PHN" })
        </div>
        <input type="submit" class="form-control btn btn-primary" value="New Comany" />
    </div>
}
