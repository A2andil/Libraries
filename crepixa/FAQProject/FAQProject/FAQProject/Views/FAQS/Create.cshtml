@model FAQProject.ViewModels.CreatedFAQVM
@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="form-group">
            <label for="ques">Enter Question</label>
            @Html.TextAreaFor(m => m.Question,
                new { @class = "form-control", @placeholder = "Question ...?" })
        </div>
        <div class="form-group">
            <label for="ques">Enter Answer</label>
            @Html.TextAreaFor(m => m.Answer,
                new { @class = "form-control", @placeholder = "Answer .." })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a href="/" class="btn btn-info" >Cancel</a>
        </div>
    </div>
}
